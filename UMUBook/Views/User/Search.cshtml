@model UMUBook.Models.SearchViewModel

@{
    ViewData["Title"] = "Search";
}

<br />
<p>
    <form asp-action="Search" method="get">
        <div class="form-group" style="float:left;">
            <input type="text" name="search" value="@ViewData["SearchString"]" style="font-size:16px; padding:5px; min-width:500px; border-radius:14px;"/>
        </div>
        <div class="form-group" style="float:right;">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
</p>

<table class="table" style="font-size:16px;">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Profiles) {
        <tr style="padding:10px;">
            <td>
                <a asp-action="Profile" asp-controller="User" asp-route-username="@item.Username">@Html.DisplayFor(modelItem => item.Username)</a>
</td>
            <td>
                @Html.DisplayFor(modelItem => item.Displayname)
            </td>
        </tr>
}
    </tbody>
</table>

@ViewBag.error
